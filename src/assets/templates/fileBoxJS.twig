<script>
    $(document).ready(function () {
        {% if "ASSETS:FILE_ATTACHMENTS:EDIT"|instancePermissions %}
        $(".renameFile").click(function () {
            var id = $(this).data("s3fileid");
            var filename = $(this).data("s3filename");
            bootbox.prompt({
                title: "Редактировать имя файла",
                inputType: 'textarea',
                value: filename,
                callback: function (result) {
                    if (result) {
                        ajaxcall("file/rename.php", {
                            "s3files_id": id,
                            "s3files_name": result
                        }, function (data) {
                            location.reload();
                        });
                    }
                }
            });
        });
        {% endif %}
        {% if "ASSETS:FILE_ATTACHMENTS:DELETE"|instancePermissions %}
        $(".deleteFile").click(function () {
            var id = $(this).data("s3fileid");
            bootbox.confirm({
                message: "Удалить этот файл?",
                buttons: {
                    confirm: {
                        label: 'Да',
                        className: 'btn-success'
                    },
                    cancel: {
                        label: 'Отмена',
                        className: 'btn-default'
                    }
                },
                callback: function (result) {
                    if (result) {
                        ajaxcall("file/delete.php", {
                            "s3files_id": id
                        }, function (data) {
                            //Hide the file in the display
                            $(".fileBox[data-s3fileid=" + id + "]").hide();
                        });
                    }
                }
            });
        });
        {% endif %}
        {% if "FILES:FILE_ATTACHMENTS:EDIT:SHARING_SETTINGS"|instancePermissions %}
        function showShareKeyDialog(file,shareKey) {
            bootbox.dialog({
                title: 'Файл опубликован',
                message: '<p>Файл открыт по ссылке и доступен всем в интернете — будьте осторожны с приватными данными.</p><div class="input-group"><input type="text" class="form-control" value="' + "{{ CONFIG.ROOTURL }}/api/file/?r&f=" + file + "&key=" + shareKey + '" disabled><span class="input-group-btn"><button class="btn btn-default copybutton" type="button" title="Копировать в буфер">Копировать</button></span></div>',
                size: 'large',
                buttons: {
                    disableshare: {
                        label: "Отключить доступ по ссылке",
                        className: 'btn-danger',
                        callback: function(){
                            ajaxcall("file/removeShare.php", {
                                "s3files_id": file
                            }, function (data) {
                                $(".shareFile[data-s3fileid=" + file + "]").data("s3filesharekey","");
                                bootbox.alert("Доступ по ссылке отключён");
                            });
                        }
                    },
                    regenerateshare: {
                        label: "Сгенерировать новую ссылку",
                        className: 'btn-warning',
                        callback: function(){
                            ajaxcall("file/share.php", {
                                "s3files_id": file
                            }, function (data) {
                                $(".shareFile[data-s3fileid=" + file + "]").data("s3filesharekey",data['response']['s3files_shareKey']);
                                showShareKeyDialog(file,data['response']['s3files_shareKey']);
                            });
                        }
                    },
                    ok: {
                        label: "Закрыть",
                        className: 'btn-default',
                        callback: function(){
                            return true;
                        }
                    }
                }
            });
        }
        $(".shareFile").click(function () {
            var id = $(this).data("s3fileid");
            var shareKey = $(this).data("s3filesharekey");
            if (shareKey !== undefined && shareKey != "") {
                showShareKeyDialog(id,shareKey);
            } else {
                bootbox.confirm({
                    title: "Опубликовать файл?",
                    message: "Файл будет доступен всем, у кого есть ссылка",
                    buttons: {
                        confirm: {
                            label: 'Опубликовать',
                            className: 'btn-warning'
                        },
                        cancel: {
                            label: 'Отмена',
                            className: 'btn-default'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            ajaxcall("file/share.php", {
                                "s3files_id": id
                            }, function (data) {
                                $(".shareFile[data-s3fileid=" + id + "]").data("s3filesharekey",data['response']['s3files_shareKey']);
                                showShareKeyDialog(id,data['response']['s3files_shareKey']);
                            });
                        }
                    }
                });
            }
        });
        // When the copy button is clicked, select the value of the text box, attempt
        // to execute the copy command, and trigger event to update tooltip message
        // to indicate whether the text was successfully copied.
        $(document).on("click", ".copybutton", function() {
            var text = $(this).closest('.input-group').children('input').val();
            var thisButton = $(this);
            console.log(text);
            $('.copybutton').html("Копировать"); //Reset all the others
            navigator.clipboard.writeText(text).then(function () {
                thisButton.html("Скопировано");
            }, function () {
                thisButton.html("Скопируйте через Ctrl+C");
            });
        });
        {% endif %}
    });
</script>
