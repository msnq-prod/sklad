{% extends "assets/template.twig" %}
{% block htmlIncludes %}

{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12 col-lg-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Просмотры по времени
                    </h3>
                    <div class="card-tools pull-right">
                        <div class="input-group input-group-sm">
                            <a type="button" class="btn btn-default btn-sm" title="Открыть страницу" href="{{ CONFIG.ROOTURL }}/cms/?p={{ PAGE.cmsPages_id }}">Открыть страницу</a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0 table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Сегодня</th>
                                <th>На этой неделе</th>
                                <th>За всё время</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ stats.today }}</td>
                                <td>{{ stats.week }}</td>
                                <td>{{ stats.all }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% if "BUSINESS:USERS:VIEW:INDIVIDUAL_USER"|instancePermissions %}
            <div class="col-md-12 col-lg-9">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Просмотры по пользователям
                        </h3>
                        <div class="card-tools pull-right">
                            <div class="input-group input-group-sm">
                                {% if "CMS:CMS_PAGES:VIEW:ACCESS_LOG"|instancePermissions %}
                                    <a href="{{ CONFIG.ROOTURL }}/cms/log.php?p={{ PAGE.cmsPages_id }}" type="button" class="btn btn-default btn-sm" title="Журнал просмотров страницы"><i class="fas fa-binoculars"></i></a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0 table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Имя пользователя</th>
                                    <th>Количество просмотров</th>
                                    <th>Последний просмотр</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entry in userViews %}
                                    <tr>
                                        <td>
                                            {% if entry.users_userid != null %}
                                                {% if "BUSINESS:USERS:VIEW:INDIVIDUAL_USER"|instancePermissions %}
                                                    <a href="{{ CONFIG.ROOTURL }}/user.php?id={{ entry.users_userid }}">
                                                        {{ entry.user.users_name1 }} {{ entry.user.users_name2 }}
                                                    </a>
                                                {% else %}
                                                    {{ entry.user.users_name1 }} {{ entry.user.users_name2 }}
                                                {% endif %}
                                            {% else %}
                                                Публичный доступ
                                            {% endif %}
                                        </td>
                                        <td>{{ entry.accessed }}</td>
                                        <td>{{ entry.last }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}