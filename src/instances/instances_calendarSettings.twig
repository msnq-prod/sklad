{% extends "assets/template.twig" %}
{% block htmlIncludes %}
    <!--Sortable-->
    <script src="{{ CONFIG.ROOTURL }}/static-assets/vendor/jquery-ui/js/jquery-ui.min.js"></script>
{% endblock %}
{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
			<div class="card-header">
				<ul class="nav nav-pills">
					<li class="nav-item"><a class="nav-link" href="{{CONFIG.ROOTURL}}/instances/navigation.php"><i class="fas fa-arrow-left"></i> Назад к настройкам</span></a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{CONFIG.ROOTURL}}/instances/billing.php">Биллинг</a></li>
                                        <li class="nav-item"><a class="nav-link" href="{{CONFIG.ROOTURL}}/instances/settings.php">Основные настройки</a></li>
					{% if CONFIG.FILES_ENABLED == "Enabled" and USERDATA.instance.instances_storageEnabled == 1 %}
                                        <li class="nav-item"><a class="nav-link" href="{{CONFIG.ROOTURL}}/instances/configuration/logo.php">Логотип</a></li>
                    {% endif %}
                                        <li class="nav-item"><a class="nav-link" href="{{CONFIG.ROOTURL}}/instances/public.php">Публичный сайт</a></li>
                                        <li class="nav-item"><a class="nav-link active" href="{{CONFIG.ROOTURL}}/instances/calendarSettings.php">Настройки календаря</a></li>
				</ul>
			</div>
		</div>
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-4">
        <div class="card">
            <form id="calendarSettings">
                <div class="card-header">
                    <div class="card-title">Настройки календаря</div>
                </div>
                <div class="card-body">
                    <p>Эти параметры применяются только к календарям на панели управления. <br />
                    <small>Календарь iCal и календари в приложении не затрагиваются.</small></p>
                    <div class="form-check py-2">
                        <input type="checkbox" class="form-check-input" name="showProjectStatus" {{ calendarSettings.showProjectStatus ? 'checked' : '' }}>
                        <label class="form-check-label">Показывать статусы проектов рядом с названием</label>
                    </div>
                    <div class="form-check py-2">
                        <input type="checkbox" class="form-check-input" name="showSubProjects" {{ calendarSettings.showSubProjects ? 'checked' : '' }}>
                        <label class="form-check-label">Отображать подпроекты в календарях</label>
                    </div>
                    <div class="form-check py-2">
                        <input type="checkbox" class="form-check-input" name="useCustomWeekNumbers" {{ calendarSettings.useCustomWeekNumbers ? 'checked' : '' }} aria-describedby="useCustomWeekNumbersHelp">
                        <label class="form-check-label">Использовать собственные подписи недель</label>
                        <small id="useCustomWeekNumbersHelp" class="form-text text-muted">Не применяется к календарям оборудования</small>
                    </div>
                    <div class="form-group py-2">
                        <label for="defaultView">Вид календаря по умолчанию</label>
                        <select class="form-control" id="defaultView" name="defaultView"  aria-describedby="defaultViewHelp">
                            <option value="dayGridMonth" {{ (calendarSettings.defaultView == 'dayGridMonth') ? 'selected' : '' }}>Месяц</option>
                            <option value="timeGridWeek" {{ (calendarSettings.defaultView == 'timeGridWeek') ? 'selected' : '' }}>Неделя</option>
                            <option value="timeGridDay" {{ (calendarSettings.defaultView == 'timeGridDay') ? 'selected' : '' }}>День</option>
                            <option value="listWeek" {{ (calendarSettings.defaultView == 'listWeek') ? 'selected' : '' }}>Список</option>
                        </select>
                        <small id="defaultViewHelp" class="form-text text-muted">Не применяется к календарям оборудования</small>
                    </div>
                </div>
                {% if "BUSINESS:BUSINESS_SETTINGS:EDIT"|instancePermissions %}
                    <div class="card-footer">
                        <button type="submit" class="btn btn-default save">Сохранить</button>
                    </div>
                {% endif %}
            </form>
        </div>
        <script>
            $(document).ready(function() {
                $("#calendarSettings").on("submit", function(e){
                    e.preventDefault();
                });
                $('.save').on('click', function() {
                    var formData = $("#calendarSettings").serializeArray();
                    ajaxcall("instances/editCalendarSettings.php", {formData});
                });
            });
        </script>
    </div>
    <div class="col-12 col-md-8">
        <div class="card">
            <form id="weekLabels">
                <div class="card-header">
                    <h3 class="card-title">Подписи недель</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Дата начала недели</th>
                                <th>Подпись недели</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for weekdate, weekLabel in USERDATA.instance['instances_weekStartDates']|jsonDecode %}
                                <tr class="border-bottom">
                                    <td>
                                        <input type="date" class="form-control" name="weekStartDate" value="{{ weekdate }}" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" name="weekLabel" value="{{ weekLabel }}" />
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>                    
                </div>
                <div class="card-footer">
                    <p class="card-subtitle mb-2">Включите опцию «Использовать собственные подписи недель» в общих настройках, чтобы активировать этот блок.</p>
                    <p style="font-style: italic;">Добавьте даты начала недель, чтобы изменить подписи в календарях {{ CONFIG.PROJECT_NAME }}. Обычно это используют школы и университеты, указывая даты начала учебных недель. Оставьте поле пустым, если подпись не требуется.</p>
                    {% if "BUSINESS:BUSINESS_SETTINGS:EDIT"|instancePermissions %}
                    <button type="button" class="btn btn-default" id="populate3months">Добавить 3 следующие месяца</button>
                    <button type="button" class="btn btn-default" id="addNewWeekValueRow">Добавить строку</button>
                    <button type="submit" class="btn btn-default">Сохранить</button>
                    {% endif %}
                </div>
            </form>
            <script>
                $(document).ready(function() {
                    {% if "BUSINESS:BUSINESS_SETTINGS:EDIT"|instancePermissions %}
                    $("#weekLabels").on("submit", function(e){
                        e.preventDefault();
                        var lastDate;
                        var formData = {};
                        // Link the date and the string
                        $('#weekLabels *').filter(':input[type=text],:input[type=date]').each(function(){
                            if ($(this).is(':input[type=text]')) {
                                if (lastDate != "" && $(this).val()) {
                                    formData[lastDate] = $(this).val();
                                }
                            } else {
                                lastDate = $(this).val();
                            }
                        });
                        var formData = [{"name": "instances_weekStartDates", "value":JSON.stringify(formData) }];
                        ajaxcall("instances/editInstance.php", {formData});
                    });
                
                    $("#addNewWeekValueRow").on("click", function(){
                        $("#weekLabels > div > table").append(`<tr class="border-bottom">
                            <td>
                                <input type="date" class="form-control" name="weekStartDate" value="{{ "now"|date("Y-m-d") }}" />
                            </td>
                            <td>
                                <input type="text" class="form-control" name="weekLabel" value=" " />
                            </td>
                        </tr>`);
                    });
                    $("#populate3months").on("click", function() {
                        var date = $('#weekLabels *').filter(':input[type=date]').last().val();
                        if (date) {
                            var jsDate = new Date(Date.parse(date));
                            for (let i = 1; i <= 13; i++) {
                                jsDate.setDate(jsDate.getDate() + 7);
                                $("#weekLabels > div > table").append(`<tr class="border-bottom">
                                    <td>
                                        <input type="date" class="form-control" name="weekStartDate" value="` + jsDate.toISOString().split('T')[0] + `" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" name="weekLabel" value="` + "Неделя " + i + `" />
                                    </td>
                                </tr>`);
                            }
                        }
                    });
                    {% endif %}
                });
            </script>
        </div>
    </div>
</div>
{% endblock %}