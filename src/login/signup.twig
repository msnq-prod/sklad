                if (initialData.hasOwnProperty("error") && initialData.error.hasOwnProperty("userid")) {
                    var userid = initialData.error.userid;
                } else {
                    var userid = initialData.response.data.userid;
                }
                $.ajax({
                    url: "../api/login/reSendVerificationEmail.php",
                    type: "POST",
                    dataType: 'json',
                    data: {
                        "userid": userid
                    }, success: function (result) {
                        if (result.result) {
                            toastr.success("Письмо повторно отправлено");
                        } else {
                            toastr.error("Ошибка подтверждения адреса эл. почты — обратитесь в поддержку");
                        }
                    }, error: function () {
                        toastr.error("Обновите страницу и проверьте подключение к интернету");
                    }
                });
            }
        });
	</script>
{% endblock %}
