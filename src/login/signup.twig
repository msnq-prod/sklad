{% extends "login/login_template.twig" %}
{% block content %}
   <div class="spinner-border" role="status" id="loadingOverlay" style="display: none;">
        <span class="sr-only">Загрузка...</span>
    </div>
    <form id="signupForm">
        <div id="errorMessageBox" class="alert alert-danger"></div>
        <input class="form-control form-control-lg" id="signupForm_users_email" maxlength="100" required placeholder="Введите адрес эл. почты" autocomplete="email" type="email" style="margin-top: 10px; margin-bottom: 10px;">
        <input class="form-control form-control-lg" id="signupForm_users_username" minlength="6" maxlength="100" required placeholder="Выберите имя пользователя" autocomplete="username"  type="text" style="margin-top: 10px; margin-bottom: 10px;">
        <input class="form-control form-control-lg" id="signupForm_users_password" minlength="10" maxlength="100" required placeholder="Выберите пароль" autocomplete="new-password"  type="password" style="margin-top: 10px; margin-bottom: 10px;">
        <input class="form-control form-control-lg" id="signupForm_users_name1" minlength="1" maxlength="100" required autocomplete="given-name" placeholder="Имя" type="text" style="margin-top: 10px; margin-bottom: 10px;">
        <input class="form-control form-control-lg" id="signupForm_users_name2" minlength="1" maxlength="100" required autocomplete="family-name" placeholder="Фамилия" type="text" style="margin-top: 10px; margin-bottom: 10px;">
        <button class="btn btn-secondary" type="submit" value="Submit">Зарегистрироваться</button>
    </form>
	<script>
		$( document ).ready(function() {
            $("#signupForm").submit(function(e){
                e.preventDefault();
                $("#signupForm").hide();
                $("#loadingOverlay").show();
                $.ajax({
                    url: "../api/login/signup.php",
                    type: "POST",
                    dataType: 'json',
                    data: {
                        "name1": $("#signupForm_users_name1").val(),
                        "name2": $("#signupForm_users_name2").val(),
                        "password": $("#signupForm_users_password").val(),
                        "username": $("#signupForm_users_username").val(),
                        "email": $("#signupForm_users_email").val()
                    }, success: function (result) {
                        if (result.result) {
                            $.ajax({
                                url: "../api/login/login.php",
                                type: "POST",
                                dataType: 'json',
                                data: {"formInput" : $("#signupForm_users_username").val(),"password": $("#signupForm_users_password").val()},
                                success: function(result) {
                                    if (result.result) {
                                        window.location.href = result.response.redirect;
                                    } else {
                                        $("#signupForm").show();
                                        $("#loadingOverlay").hide();
                                        $("#errorMessageBox").html(result.error.message);
                                        $("#errorMessageBox").show();
                                    }
                                },
                                error: function(){
                                    $("#signupForm").show();
                                    $("#loadingOverlay").hide();
                                    $("#errorMessageBox").html("Аккаунт создан, но вход не выполнен: обновите страницу и проверьте подключение к интернету");
                                    $("#errorMessageBox").show();
                                }
                            });
                        } else {
                            $("#signupForm").show();
                            $("#loadingOverlay").hide();
                            $("#errorMessageBox").html(result.error.message);
                            $("#errorMessageBox").show();
                        }
                    }, error: function () {
                        $("#signupForm").show();
                        $("#loadingOverlay").hide();
                        $("#errorMessageBox").html("Обновите страницу и проверьте подключение к интернету");
                        $("#errorMessageBox").show();
                    }
                });
            });
            
